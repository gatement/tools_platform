{application, cleaner,
 [
  {description, "tools_platform cleaner"},
  {vsn, "0.1.0"},
  {registered, [cleaner_sup]},
  {applications, [
                  kernel,
                  stdlib
                 ]},
  {env, [
    {run_interval, 60}, % in seconds
    
    {user_session_timeout, 57600}, % in seconds, = 16hr
    {rrdtool_img_timeout, 60} % in seconds
  ]},
  {mod, {cleaner_app, []}}
 ]}.
